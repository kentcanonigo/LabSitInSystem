<Window x:Class="LabSitInSystem.AddStudentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabSitInSystem"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        Title="AddStudentDialog" Height="625" Width="629">
    <Grid Background="#FFD9D9D9">
        <Label Content="Add/Edit Student" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="55" Width="387" FontFamily="Inter 24pt 24pt" FontSize="36" FontWeight="Bold"/>
        <Label Content="Full Name" HorizontalAlignment="Left" Margin="17,84,0,0" VerticalAlignment="Top" Height="38" Width="188" FontFamily="Inter 24pt 24pt" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="FullName" HorizontalAlignment="Left" Margin="17,122,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="590" Height="41" FontFamily="Inter 18pt 18pt" FontSize="22" BorderBrush="{x:Null}" BorderThickness="1,1,1,1" VerticalContentAlignment="Center" Padding="3,0,0,0"/>
        <Label Content="ID Number" HorizontalAlignment="Left" Margin="17,186,0,0" VerticalAlignment="Top" Height="38" Width="188" FontFamily="Inter 24pt 24pt" FontSize="24" FontWeight="Bold"/>
        <TextBox x:Name="IDNumber" HorizontalAlignment="Left" Margin="17,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="590" Height="41" FontFamily="Inter 18pt 18pt" FontSize="22" BorderBrush="{x:Null}" BorderThickness="1,1,1,1" VerticalContentAlignment="Center" Padding="3,0,0,0"/>
        <Label x:Name="CourseLabel" Content="Course" HorizontalAlignment="Left" Margin="17,297,0,0" VerticalAlignment="Top" Height="38" Width="211" FontFamily="Inter 24pt 24pt" FontSize="24" FontWeight="Bold"/>
        <ComboBox x:Name="Course" HorizontalAlignment="Left" Margin="17,335,0,0" VerticalAlignment="Top" Width="590" Height="40" BorderBrush="{x:Null}">
            <ComboBoxItem>BSCpE</ComboBoxItem>
            <ComboBoxItem>BSECE</ComboBoxItem>
            <ComboBoxItem>BSEE</ComboBoxItem>
        </ComboBox>
        <Label x:Name="SchedLabel" Content="Schedule" HorizontalAlignment="Left" Margin="352,402,0,0" VerticalAlignment="Top" Height="38" Width="211" FontFamily="Inter 24pt 24pt" FontSize="24" FontWeight="Bold"/>
        <ComboBox x:Name="Schedule" HorizontalAlignment="Left" Margin="352,440,0,0" VerticalAlignment="Top" Width="255" Height="40" BorderBrush="{x:Null}">
            <ComboBoxItem>G</ComboBoxItem>
            <ComboBoxItem>N</ComboBoxItem>
        </ComboBox>
        <Button x:Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Left" Margin="17,519,0,0" VerticalAlignment="Top" Height="56" Width="255" BorderBrush="{x:Null}" Foreground="White" FontFamily="Inter 18pt 18pt" FontSize="20" Background="#FF5CB338" Click="ConfirmButton_Click"/>
        <Button x:Name="CancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="352,519,0,0" VerticalAlignment="Top" Height="56" Width="255" BorderBrush="{x:Null}" Foreground="White" FontFamily="Inter 18pt 18pt" FontSize="20" Background="#FFFB4141" Click="CancelButton_Click"/>
        <Label Content="Year Level" HorizontalAlignment="Left" Margin="17,402,0,0" VerticalAlignment="Top" Height="38" Width="211" FontFamily="Inter 24pt 24pt" FontSize="24" FontWeight="Bold"/>
        <ComboBox x:Name="YearLevel" HorizontalAlignment="Left" Margin="17,440,0,0" VerticalAlignment="Top" Width="255" Height="40" BorderBrush="{x:Null}">
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
        </ComboBox>

    </Grid>
</Window>
