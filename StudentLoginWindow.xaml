<Window x:Class="LabSitInSystem.StudentLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabSitInSystem"
        mc:Ignorable="d"
        Title="Login" Height="1024" Width="1440"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Image HorizontalAlignment="Left" VerticalAlignment="Center" Source="/Assets/Images/login-bg.png"/>
        <Image HorizontalAlignment="Left" Height="144" Margin="1007,139,0,0" VerticalAlignment="Top" Width="144" Source="/Assets/Images/ctu-logo.png"/>
        <Label Content="Student Laboratory System" HorizontalAlignment="Left" Margin="831,288,0,0" VerticalAlignment="Top" Height="57" Width="496" FontFamily="Inter 28pt 28pt" FontSize="40"/>
        <Rectangle HorizontalAlignment="Left" Height="321" Margin="811,460,0,0" VerticalAlignment="Top" Width="536" StrokeThickness="4" RadiusX="16" RadiusY="16" Fill="#FFD9D9D9"/>
        <Label Content="ID Number" HorizontalAlignment="Left" Margin="831,0,0,0" VerticalAlignment="Center" Height="38" Width="136" FontFamily="Inter 24pt 24pt" FontSize="24" FontWeight="Bold"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="831,583,0,0" VerticalAlignment="Top" Height="38" Width="136" FontFamily="Inter 24pt 24pt" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="LogInButton" Content="Login" HorizontalAlignment="Left" Margin="993,705,0,0" VerticalAlignment="Top" Height="41" Width="172" BorderBrush="{x:Null}" Foreground="White" FontFamily="Inter 18pt 18pt" FontSize="20" Click="LogInButton_Click" Background="Black"/>
        <TextBox x:Name="IDNumberBox" HorizontalAlignment="Left" Margin="831,528,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="496" Height="41" FontFamily="Inter 18pt 18pt" FontSize="22" BorderBrush="{x:Null}" BorderThickness="1,1,1,1" VerticalContentAlignment="Center" Padding="3,0,0,0"/>
        <PasswordBox x:Name="PassBox" HorizontalAlignment="Left" Margin="831,626,0,0" VerticalAlignment="Top" Width="496" Height="41" BorderBrush="{x:Null}" Padding="3,0,0,0" FontFamily="Inter 18pt 18pt" VerticalContentAlignment="Center"/>
        <Button x:Name="LoginAsAdminButton" Content="Login as administrator" HorizontalAlignment="Left" Margin="958,918,0,0" VerticalAlignment="Top" Height="41" Width="242" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="Black" FontFamily="Inter 18pt 18pt" FontSize="20" Click="LoginAsAdminButton_Click" FontStyle="Italic"/>

    </Grid>
</Window>
