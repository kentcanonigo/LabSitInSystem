<Window x:Class="LabSitInSystem.StudentDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LabSitInSystem"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Title="StudentDashboard" Height="501" Width="402">
    <Grid Background="#FFD9D9D9">
        <Label x:Name="NameLabel" Content="Hello, {name}!" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="55" Width="387" FontFamily="Inter 24pt 24pt" FontSize="36" FontWeight="Bold"/>
        <Label Content="Old Password" HorizontalAlignment="Left" Margin="17,84,0,0" VerticalAlignment="Top" Height="38" Width="188" FontFamily="Inter 24pt 24pt" FontSize="24" FontWeight="Bold"/>
        <Button x:Name="StartButton" Content="Start Session" HorizontalAlignment="Center" Margin="0,306,0,0" VerticalAlignment="Top" Height="83" Width="246" BorderBrush="{x:Null}" Foreground="White" FontFamily="Inter 28pt 28pt" FontSize="28" Background="#FF5CB338" Click="StartButton_Click" FontWeight="Bold"/>
        <Button x:Name="LogOutButton" Content="Log Out" HorizontalAlignment="Center" Margin="0,404,0,0" VerticalAlignment="Top" Height="43" Width="152" BorderBrush="{x:Null}" Foreground="White" FontFamily="Inter 18pt 18pt" FontSize="20" Background="Black" Click="LogOutButton_Click"/>
        <Button x:Name="ChangePassButton" Content="Change Password" HorizontalAlignment="Center" Margin="0,251,0,0" VerticalAlignment="Top" Height="39" Width="246" BorderBrush="{x:Null}" Foreground="Black" FontFamily="Inter 18pt 18pt" FontSize="18" Background="{x:Null}" Click="ChangePassButton_Click"/>
        <Label Content="New Password" HorizontalAlignment="Left" Margin="17,162,0,0" VerticalAlignment="Top" Height="38" Width="188" FontFamily="Inter 24pt 24pt" FontSize="24" FontWeight="Bold"/>
        <PasswordBox x:Name="OldPassword" HorizontalAlignment="Center" Margin="0,122,0,0" VerticalAlignment="Top" Width="366" Height="31" BorderBrush="{x:Null}" Padding="3,0,0,0" FontFamily="Inter 18pt 18pt" VerticalContentAlignment="Center"/>
        <PasswordBox x:Name="NewPassword" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Width="366" Height="31" BorderBrush="{x:Null}" Padding="3,0,0,0" FontFamily="Inter 18pt 18pt" VerticalContentAlignment="Center"/>

    </Grid>
</Window>
